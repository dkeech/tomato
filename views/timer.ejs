<%- include("partials/header") %>
<div class="container" style="text-align: center;">
    <!-- Simple Timers Form -->
    <h2>Set Timer:</h2>
    <div id="set-task-time" class="form-group">
        <p>Task Time:</p>
        <!-- Hour -->
        <select id="set-task-hour" class="form-control tiny-form">
            <% for(i = 0; i < 24; i++){ %>
                <option value="<%=i%>"><%=i%></option>
            <% } %>
            
        </select>
        <label for="set-task-hour" class="set-unit-labels ">h</label>
        <!-- Minute -->
        <select id="set-task-min" class="form-control tiny-form">
            <% for(i = 0; i < 60; i++) { %>
            <option value="<%=i%>"><%=i%></option>
            <% } %>
            
        </select>
        <label for="set-task-min" class="set-unit-labels ">m</label>
        <!-- Second -->
        <select id="set-task-sec" class="form-control tiny-form">
            <% for(i = 0; i < 60; i++) { %>
                <option value="<%=i%>"><%=i%></option>
            <% } %>
            
        </select>
        <label for="set-task-sec" class="set-unit-labels">s</label>
    </div>

    <div id="set-break-time" class="form-group">
        <p>Break Time:</p>
        <!-- As multiple select inputs in hour, min, sec -->
        <!-- Hour -->
        <select id="set-break-hour" class="form-control tiny-form">
            <% for(i = 0; i < 24; i++){ %>
                <option value="<%=i%>"><%=i%></option>
            <% } %>
        </select>
        <label for="set-break-hour" class="set-unit-labels">h</label>
        <!-- Minute -->
        <select id="set-break-min" class="form-control tiny-form">
            <% for(i = 0; i < 60; i++) { %>
                <option value="<%=i%>"><%=i%></option>
            <% } %>
        </select>
        <label for="set-break-min" class="set-unit-labels">m</label>
        <!-- Second -->
        <select id="set-break-sec" class="form-control tiny-form">
            <% for(i = 0; i < 60; i++) { %>
                <option value="<%=i%>"><%=i%></option>
            <% } %>
        </select>
        <label for="set-break-sec" class="set-unit-labels">s</label>
    </div>

    <div id="set-times">
        <button id="set-times-button" class="btn btn-primary">Set</button>
    </div>
</div>

<br>

<!-- Timer -->
<div id="timer-container" class="container timer-container task-timer">

    <!-- TIMER HEADER -->
    <!-- The timer-container's class will determine which header items to show/hide -->
    <!-- TASK HEADER as Select input -->
    <select id="task-dropdown-header" class="selectpicker timer-header task-dropdown-header">
        <option class="task-dropdown-option" value="" disabled selected hidden>Select Your Task</option>
    </select>

    <!-- BREAK HEADER -->
    <div id="break-timer-title-container" class="timer-header break-header">
        <div id="break-timer-title">Break</div>
    </div>

    <!-- COUNTDOWN -->
    <div class="countdown-bar">
        <div id="countdown-fill" class="countdown-fill"></div>
        <div id="countdown-time" class="countdown-time">00:00:00</div>
    </div>


    <!-- BUTTONS -->
    <div id="timer-buttons-group" class="btn-group timer-button" role="group">
        <!-- Edit Duration (Toggles input fields) -->
        <button id="edit-duration-toggle" title="Change Timer Duration" class="btn btn-secondary" type="button" data-toggle="collapse" data-target="#edit-duration-inputs" aria-expanded="false" aria-controls="collapseExample">
            <i class="fa fa-pencil"></i>
        </button>

        <!-- Reset (Restart the timer) -->
        <button id="timer-reset" title="Restart Timer" class="btn btn-secondary" type="button"><i class="fa fa-repeat"></i></button>

        <!-- Start/Pause (toggles with JS) -->
        <button id="timer-start-pause" title="Start Timer" class="btn btn-secondary type="button"><i class="fa fa-play"></i></button>

        <!-- Stop  -->
        <button id="timer-stop" title="Stop Timer" class="btn btn-secondary type="button"><i class="fa fa-stop"></i></button>

        <!-- Skip -->
        <button id="timer-skip" title="Skip" class="btn btn-secondary" type="button"><i class="fa fa-forward"></i></button>
    </div>


    <!-- EDIT DURATION INPUTS -->

    <div id="edit-duration-inputs" class="collapse container">

        <div class="edit-dur-row row">
            <div class="col">
                <div class="form-group">
                    <!-- Hour -->
                    <select id="edit-hour" class="selectpicker form-control">
                        <% for(i = 0; i < 24; i++){ %>
                            <option value="<%=i%>"><%=i%></option>
                        <% } %>
                    </select>
                    <label for="edit-hour" class="set-unit-labels text-muted">hour</label>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <!-- Minute -->
                    <select id="edit-min" class="selectpicker form-control">
                        <% for(i = 0; i < 60; i++) { %>
                            <option value="<%=i%>"><%=i%></option>
                        <% } %>
                    </select>
                    <label for="edit-min" class="set-unit-labels text-muted">min</label>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <!-- Second -->
                    <select id="edit-sec" class="selectpicker form-control">
                        <% for(i = 0; i < 60; i++) { %>
                            <option value="<%=i%>"><%=i%></option>
                        <% } %>
                    </select>
                    <label for="edit-sec" class="set-unit-labels text-muted">sec</label>
                </div>
            </div>
        </div>

        <!-- Submit -->
        <button id="edit-duration-submit" class="timer-button set-button btn btn-sm btn-primary" type="button">Set Duration</button>

    </div>
</div>

<div class="container">
<br>
<h6>Time Spent on Task:</h6>
<p id="total task"></p>
<input id="total_time" hidden type="number">

</div>
<script src="/timer.js"></script>
<script src="/timer_requests.js"></script>
<%- include("partials/footer") %>